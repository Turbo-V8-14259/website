---
import Layout from '../layouts/LayoutDep.astro';
---
<Layout title="Page Not Found" navIndex={-1}>
    <main>
        <h1>404 Page not found...</h1>
    </main>
</Layout>


<style>
    h1 {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 1em;
        color: white;
    }

    p {
        font-size: 2rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 1em;
        color: white;
    }

    a:link, a:visited {
        color: #006fff;
        background-color: transparent;
        text-decoration: none;
    }


    a:hover {
        color: #0095ff;
        background-color: transparent;
        text-decoration: underline;
    }

    a:active {
        color: #00d0ff;
        background-color: transparent;
        text-decoration: underline;
    }
</style>