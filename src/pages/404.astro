---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found">
    <main class="main-content">
        <section class="error-404">
            <div class="error-container">
                <div class="error-content">
                    <div class="error-number">
                        <span class="four">4</span>
                        <span class="zero">0</span>
                        <span class="four">4</span>
                    </div>
                    <h1 class="error-title">Page Not Found</h1>
                    <p class="error-description">
                        Oops! The page you're looking for seems to have gone off-track.
                        Maybe it's exploring new robotics territories or got lost in the code.
                    </p>
                    <div class="error-actions">
                        <a href="/" class="cta-button primary">
                            <i class="fas fa-home"></i>
                            Back to Home
                        </a>
                        <a href="/team" class="cta-button secondary">
                            <i class="fas fa-users"></i>
                            Meet Our Team
                        </a>
                    </div>
                    <div class="helpful-links">
                        <h3>You might be looking for:</h3>
                        <ul>
                            <li><a href="/#about">About TurbΩ V8</a></li>
                            <li><a href="/#projects">Our Projects</a></li>
                            <li><a href="/#contact">Contact Us</a></li>
                            <li><a href="/team">Team Members</a></li>
                        </ul>
                    </div>
                </div>
                <div class="error-visual">
                    <div class="robot-container">
                        <div class="robot-icon">
                            <div class="robot-head">
                                <div class="robot-antenna"></div>
                                <div class="robot-antenna"></div>
                                <div class="robot-eyes">
                                    <div class="robot-eye"></div>
                                    <div class="robot-eye"></div>
                                </div>
                                <div class="robot-mouth"></div>
                            </div>
                            <div class="robot-body">
                                <div class="robot-chest"></div>
                                <div class="robot-arms">
                                    <div class="robot-arm left"></div>
                                    <div class="robot-arm right"></div>
                                </div>
                            </div>
                        </div>
                        <div class="robot-shadow"></div>
                    </div>
                    <div class="circuit-pattern">
                        <div class="circuit-grid"></div>
                        <div class="circuit-nodes">
                            <div class="node"></div>
                            <div class="node"></div>
                            <div class="node"></div>
                            <div class="node"></div>
                            <div class="node"></div>
                            <div class="node"></div>
                        </div>
                        <div class="circuit-lines">
                            <div class="line horizontal"></div>
                            <div class="line vertical"></div>
                            <div class="line diagonal"></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="content-fade"></div>
    </main>
</Layout>

<style>
    .error-404 {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--black) 0%, var(--dark-red) 100%);
        position: relative;
        overflow: hidden;
    }

    .error-404::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(circle at 20% 80%, rgba(255, 26, 26, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(255, 26, 26, 0.1) 0%, transparent 50%);
        pointer-events: none;
    }

    .error-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
        position: relative;
        z-index: 1;
    }

    .error-content {
        text-align: left;
    }

    .error-number {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        margin-bottom: 2rem;
        font-family: 'Orbitron Variable', monospace;
    }

    .error-number span {
        font-size: 8rem;
        font-weight: bold;
        text-shadow: 0 0 30px var(--red-shadow);
        animation: glow 2s ease-in-out infinite alternate;
    }

    .four {
        color: var(--light-red);
    }

    .zero {
        color: white;
        margin: 0 1rem;
        transform: scale(1.2);
    }

    .error-title {
        font-size: 3rem;
        color: var(--light-red);
        margin-bottom: 1.5rem;
        font-weight: bold;
        text-shadow: 0 0 20px var(--red-shadow);
    }

    .error-description {
        font-size: 1.2rem;
        color: #cccccc;
        line-height: 1.6;
        margin-bottom: 3rem;
        max-width: 500px;
    }

    .error-actions {
        display: flex;
        gap: 1rem;
        margin-bottom: 3rem;
        flex-wrap: wrap;
    }

    .cta-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .cta-button.primary {
        background: var(--light-red);
        color: white;
    }

    .cta-button.primary:hover {
        background: var(--dark-red);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(255, 26, 26, 0.3);
    }

    .cta-button.secondary {
        background: transparent;
        color: var(--light-red);
        border-color: var(--light-red);
    }

    .cta-button.secondary:hover {
        background: var(--light-red);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(255, 26, 26, 0.2);
    }

    .helpful-links {
        background: rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border-radius: 12px;
        border: 1px solid rgba(255, 26, 26, 0.2);
    }

    .helpful-links h3 {
        color: var(--light-red);
        margin-bottom: 1rem;
        font-size: 1.1rem;
    }

    .helpful-links ul {
        list-style: none;
        padding: 0;
    }

    .helpful-links li {
        margin-bottom: 0.5rem;
    }

    .helpful-links a {
        color: #cccccc;
        text-decoration: none;
        transition: color 0.3s ease;
        display: flex;
        align-items: center;
    }

    .helpful-links a:hover {
        color: var(--light-red);
    }

    .helpful-links a::before {
        content: '→';
        margin-right: 0.5rem;
        color: var(--light-red);
    }

    .error-visual {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    /* Content Fade Effect */
    .content-fade {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 150px;
        background: linear-gradient(
                to bottom,
                transparent 0%,
                rgba(10, 10, 10, 0.1) 20%,
                rgba(10, 10, 10, 0.3) 40%,
                rgba(10, 10, 10, 0.6) 60%,
                rgba(10, 10, 10, 0.8) 80%,
                var(--black) 100%
        );
        pointer-events: none;
        z-index: 10;
    }

    .main-content {
        position: relative;
    }

    /* Robot Container */
    .robot-container {
        position: relative;
        margin-bottom: 3rem;
        animation: float 3s ease-in-out infinite;
    }

    .robot-icon {
        width: 200px;
        height: 240px;
        position: relative;
        margin: 0 auto;
    }

    /* Robot Head */
    .robot-head {
        width: 120px;
        height: 100px;
        background: linear-gradient(145deg, var(--light-red), var(--dark-red));
        border-radius: 20px;
        position: relative;
        margin: 0 auto 10px;
        box-shadow: 0 0 30px rgba(255, 26, 26, 0.5),
        inset 0 2px 10px rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 26, 26, 0.8);
    }

    /* Robot Antennas */
    .robot-antenna {
        width: 4px;
        height: 25px;
        background: var(--light-red);
        position: absolute;
        top: -20px;
        border-radius: 2px;
        box-shadow: 0 0 10px var(--light-red);
    }

    .robot-antenna:first-child {
        left: 30px;
        animation: antenna-blink 2s ease-in-out infinite;
    }

    .robot-antenna:last-child {
        right: 30px;
        animation: antenna-blink 2s ease-in-out infinite 0.5s;
    }

    .robot-antenna::after {
        content: '';
        width: 8px;
        height: 8px;
        background: var(--light-red);
        border-radius: 50%;
        position: absolute;
        top: -6px;
        left: -2px;
        box-shadow: 0 0 15px var(--light-red);
    }

    /* Robot Eyes */
    .robot-eyes {
        display: flex;
        justify-content: space-between;
        padding: 0 25px;
        margin-top: 25px;
    }

    .robot-eye {
        width: 20px;
        height: 20px;
        background: #00ffff;
        border-radius: 50%;
        box-shadow: 0 0 20px #00ffff,
        inset 0 0 10px rgba(255, 255, 255, 0.3);
        animation: eye-glow 3s ease-in-out infinite alternate;
        position: relative;
    }

    .robot-eye::after {
        content: '';
        width: 8px;
        height: 8px;
        background: white;
        border-radius: 50%;
        position: absolute;
        top: 3px;
        left: 3px;
        opacity: 0.8;
    }

    /* Robot Mouth */
    .robot-mouth {
        width: 40px;
        height: 8px;
        background: #333;
        border-radius: 4px;
        margin: 15px auto 0;
        position: relative;
        box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.5);
    }

    .robot-mouth::after {
        content: '';
        width: 30px;
        height: 2px;
        background: var(--light-red);
        position: absolute;
        top: 3px;
        left: 5px;
        border-radius: 1px;
        animation: mouth-talk 4s ease-in-out infinite;
    }

    /* Robot Body */
    .robot-body {
        width: 140px;
        height: 120px;
        background: linear-gradient(145deg, #333, #111);
        border-radius: 15px;
        position: relative;
        margin: 0 auto;
        border: 2px solid var(--light-red);
        box-shadow: 0 0 25px rgba(255, 26, 26, 0.3),
        inset 0 2px 10px rgba(255, 255, 255, 0.05);
    }

    /* Robot Chest Panel */
    .robot-chest {
        width: 80px;
        height: 60px;
        background: linear-gradient(145deg, #222, #000);
        border-radius: 10px;
        position: absolute;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        border: 1px solid var(--light-red);
        box-shadow: inset 0 0 15px rgba(255, 26, 26, 0.2);
    }

    .robot-chest::before {
        content: '';
        width: 60px;
        height: 2px;
        background: var(--light-red);
        position: absolute;
        top: 15px;
        left: 10px;
        border-radius: 1px;
        box-shadow: 0 0 10px var(--light-red);
        animation: chest-scan 3s ease-in-out infinite;
    }

    .robot-chest::after {
        content: '';
        width: 60px;
        height: 2px;
        background: var(--light-red);
        position: absolute;
        top: 25px;
        left: 10px;
        border-radius: 1px;
        box-shadow: 0 0 10px var(--light-red);
        animation: chest-scan 3s ease-in-out infinite 0.5s;
    }

    /* Robot Arms */
    .robot-arms {
        position: absolute;
        top: 30px;
        width: 100%;
        height: 60px;
    }

    .robot-arm {
        width: 25px;
        height: 60px;
        background: linear-gradient(145deg, #333, #111);
        border-radius: 12px;
        position: absolute;
        border: 1px solid var(--light-red);
        box-shadow: 0 0 15px rgba(255, 26, 26, 0.2);
    }

    .robot-arm.left {
        left: -20px;
        animation: arm-wave 4s ease-in-out infinite;
    }

    .robot-arm.right {
        right: -20px;
        animation: arm-wave 4s ease-in-out infinite 2s;
    }

    /* Robot Shadow */
    .robot-shadow {
        width: 180px;
        height: 20px;
        background: radial-gradient(ellipse, rgba(0, 0, 0, 0.3) 0%, transparent 70%);
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        animation: shadow-pulse 3s ease-in-out infinite;
    }

    /* Enhanced Circuit Pattern */
    .circuit-pattern {
        width: 350px;
        height: 350px;
        position: relative;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(255, 26, 26, 0.05) 0%, transparent 70%);
        border: 2px solid rgba(255, 26, 26, 0.2);
        animation: circuit-rotate 20s linear infinite;
    }

    .circuit-grid {
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent 48%, rgba(255, 26, 26, 0.3) 49%, rgba(255, 26, 26, 0.3) 51%, transparent 52%),
        linear-gradient(0deg, transparent 48%, rgba(255, 26, 26, 0.3) 49%, rgba(255, 26, 26, 0.3) 51%, transparent 52%);
        background-size: 40px 40px;
        border-radius: 50%;
        animation: grid-pulse 3s ease-in-out infinite;
    }

    .circuit-nodes {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .node {
        width: 12px;
        height: 12px;
        background: var(--light-red);
        border-radius: 50%;
        position: absolute;
        box-shadow: 0 0 20px var(--light-red),
        0 0 40px rgba(255, 26, 26, 0.5);
        animation: node-pulse 2s ease-in-out infinite;
    }

    .node:nth-child(1) {
        top: 20%;
        left: 50%;
        animation-delay: 0s;
    }

    .node:nth-child(2) {
        top: 50%;
        right: 20%;
        animation-delay: 0.3s;
    }

    .node:nth-child(3) {
        bottom: 20%;
        left: 50%;
        animation-delay: 0.6s;
    }

    .node:nth-child(4) {
        top: 50%;
        left: 20%;
        animation-delay: 0.9s;
    }

    .node:nth-child(5) {
        top: 30%;
        right: 30%;
        animation-delay: 1.2s;
    }

    .node:nth-child(6) {
        bottom: 30%;
        left: 30%;
        animation-delay: 1.5s;
    }

    .circuit-lines {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .line {
        position: absolute;
        background: linear-gradient(90deg, transparent, var(--light-red), transparent);
        animation: line-flow 4s ease-in-out infinite;
    }

    .line.horizontal {
        width: 60%;
        height: 2px;
        top: 50%;
        left: 20%;
        transform: translateY(-50%);
    }

    .line.vertical {
        width: 2px;
        height: 60%;
        left: 50%;
        top: 20%;
        transform: translateX(-50%) rotate(90deg);
        animation-delay: 1s;
    }

    .line.diagonal {
        width: 50%;
        height: 2px;
        top: 30%;
        left: 25%;
        transform: rotate(45deg);
        animation-delay: 2s;
    }

    /* Animations */
    @keyframes antenna-blink {
        0%, 90% {
            opacity: 1;
        }
        95% {
            opacity: 0.3;
        }
        100% {
            opacity: 1;
        }
    }

    @keyframes eye-glow {
        0% {
            box-shadow: 0 0 20px #00ffff, inset 0 0 10px rgba(255, 255, 255, 0.3);
        }
        100% {
            box-shadow: 0 0 30px #00ffff, 0 0 50px rgba(0, 255, 255, 0.5), inset 0 0 10px rgba(255, 255, 255, 0.3);
        }
    }

    @keyframes mouth-talk {
        0%, 50%, 100% {
            width: 30px;
        }
        25%, 75% {
            width: 20px;
        }
    }

    @keyframes chest-scan {
        0%, 100% {
            opacity: 0.3;
            transform: scaleX(0.5);
        }
        50% {
            opacity: 1;
            transform: scaleX(1);
        }
    }

    @keyframes arm-wave {
        0%, 100% {
            transform: rotate(0deg);
        }
        25% {
            transform: rotate(-15deg);
        }
        75% {
            transform: rotate(15deg);
        }
    }

    @keyframes shadow-pulse {
        0%, 100% {
            opacity: 0.3;
            transform: translateX(-50%) scale(1);
        }
        50% {
            opacity: 0.6;
            transform: translateX(-50%) scale(1.1);
        }
    }

    @keyframes circuit-rotate {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }

    @keyframes grid-pulse {
        0%, 100% {
            opacity: 0.3;
        }
        50% {
            opacity: 0.6;
        }
    }

    @keyframes node-pulse {
        0%, 100% {
            transform: scale(1);
            box-shadow: 0 0 20px var(--light-red), 0 0 40px rgba(255, 26, 26, 0.5);
        }
        50% {
            transform: scale(1.3);
            box-shadow: 0 0 30px var(--light-red), 0 0 60px rgba(255, 26, 26, 0.8);
        }
    }

    @keyframes line-flow {
        0% {
            opacity: 0.3;
            transform: scaleX(0.5);
        }
        50% {
            opacity: 1;
            transform: scaleX(1);
        }
        100% {
            opacity: 0.3;
            transform: scaleX(0.5);
        }
    }

    @keyframes glow {
        from {
            text-shadow: 0 0 30px var(--red-shadow);
        }
        to {
            text-shadow: 0 0 50px var(--red-shadow), 0 0 70px var(--light-red);
        }
    }

    @keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    @keyframes pulse {
        0%, 100% {
            opacity: 0.1;
            transform: scale(1);
        }
        50% {
            opacity: 0.2;
            transform: scale(1.05);
        }
    }

    @media (max-width: 768px) {
        .error-container {
            grid-template-columns: 1fr;
            gap: 2rem;
            text-align: center;
        }

        .error-content {
            text-align: center;
        }

        .error-number {
            justify-content: center;
        }

        .error-number span {
            font-size: 6rem;
        }

        .error-title {
            font-size: 2.5rem;
        }

        .error-description {
            font-size: 1.1rem;
            max-width: none;
        }

        .error-actions {
            justify-content: center;
        }

        .robot-icon {
            width: 150px;
            height: 180px;
        }

        .robot-head {
            width: 90px;
            height: 75px;
        }

        .robot-body {
            width: 105px;
            height: 90px;
        }

        .circuit-pattern {
            width: 250px;
            height: 250px;
        }
    }

    @media (max-width: 480px) {
        .error-number span {
            font-size: 4rem;
        }

        .error-title {
            font-size: 2rem;
        }

        .error-actions {
            flex-direction: column;
            align-items: center;
        }

        .cta-button {
            width: 100%;
            max-width: 250px;
            justify-content: center;
        }

        .robot-icon {
            width: 120px;
            height: 144px;
        }

        .robot-head {
            width: 72px;
            height: 60px;
        }

        .robot-body {
            width: 84px;
            height: 72px;
        }

        .robot-chest {
            width: 50px;
            height: 40px;
        }

        .circuit-pattern {
            width: 200px;
            height: 200px;
        }


    }
</style>