---
//import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Donate">
    <main class="main-content">
        <section class="hero">
            <div class="hero-content">
                <h1 class="hero-title">Support TurboV8</h1>
                <p class="hero-subtitle">Help us inspire the next generation of STEM leaders</p>
                <p class="hero-description">
                    Your donation helps us continue our mission of inspiring young minds through
                    robotics education, community outreach, and competitive excellence. Every
                    contribution makes a difference in a student's STEM journey.
                </p>
                <div class="hero-actions">
                    <a href="#donate-now" class="btn btn-primary btn-lg">Donate Now</a>
                </div>
            </div>
        </section>

        <section class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h2 class="section-title">Why Your Support Matters</h2>
                        <div class="impact-list">
                            <div class="impact-item">
                                <h3>Equipment & Materials</h3>
                                <p>
                                    Robotics requires specialized parts, tools, and materials. Your donation
                                    helps us purchase motors, sensors, building materials, and competition
                                    field elements for practice.
                                </p>
                            </div>
                            <div class="impact-item">
                                <h3>Competition Expenses</h3>
                                <p>
                                    Registration fees, travel costs, and accommodation for regional and
                                    championship competitions. These experiences are invaluable for our
                                    team's growth and learning.
                                </p>
                            </div>
                            <div class="impact-item">
                                <h3>Outreach Programs</h3>
                                <p>
                                    Materials and resources for our free Steam Workshops and community
                                    outreach events. We provide hands-on STEM education to underserved
                                    communities at no cost.
                                </p>
                            </div>
                            <div class="impact-item">
                                <h3>Team Development</h3>
                                <p>
                                    Training materials, software licenses, and educational resources that
                                    help our team members develop technical and leadership skills.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h2 class="section-title">Our Impact</h2>
                        <div class="stats-card">
                            <div class="stat-item">
                                <h3 class="stat-number">500+</h3>
                                <p class="stat-label">Students Inspired</p>
                            </div>
                            <div class="stat-item">
                                <h3 class="stat-number">25+</h3>
                                <p class="stat-label">Community Events</p>
                            </div>
                            <div class="stat-item">
                                <h3 class="stat-number">10+</h3>
                                <p class="stat-label">Teams Mentored</p>
                            </div>
                            <div class="stat-item">
                                <h3 class="stat-number">3</h3>
                                <p class="stat-label">Championship Appearances</p>
                            </div>
                        </div>

                        <div class="testimonial-card">
                            <blockquote>
                                "TurboV8's outreach program sparked my daughter's interest in engineering.
                                She's now pursuing a STEM degree in college!"
                            </blockquote>
                            <cite>- Parent from our Steam Workshop</cite>
                        </div>
                    </div>
                </div>

                <div class="row mt-6" id="donate-now">
                    <div class="col-12">
                        <h2 class="section-title text-center">Make a Donation</h2>
                        <div class="donation-section">
                            <div class="donation-amounts">
                                <h3>Suggested Donation Amounts</h3>
                                <div class="amount-grid">
                                    <div class="amount-card">
                                        <h4>$25</h4>
                                        <p>Provides materials for one student in our Steam Workshop</p>
                                    </div>
                                    <div class="amount-card">
                                        <h4>$50</h4>
                                        <p>Covers competition registration fees</p>
                                    </div>
                                    <div class="amount-card">
                                        <h4>$100</h4>
                                        <p>Funds essential robot parts and components</p>
                                    </div>
                                    <div class="amount-card">
                                        <h4>$250</h4>
                                        <p>Supports travel expenses for competitions</p>
                                    </div>
                                </div>
                            </div>

                            <div class="donation-methods">
                                <h3>How to Donate</h3>
                                <div class="method-list">
                                    <div class="method-item">
                                        <h4>Online Donation</h4>
                                        <p>Secure online donations through our fiscal sponsor</p>
                                        <a href="/contact" class="btn btn-primary">Contact for Details</a>
                                    </div>
                                    <div class="method-item">
                                        <h4>Check Payment</h4>
                                        <p>Mail checks made payable to TurboV8</p>
                                        <a href="/contact" class="btn btn-outline">Get Mailing Address</a>
                                    </div>
                                    <div class="method-item">
                                        <h4>Corporate Sponsorship</h4>
                                        <p>Partner with us for ongoing support and recognition</p>
                                        <a href="/sponsors" class="btn btn-outline">Learn More</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-6">
                    <div class="col-12">
                        <h2 class="section-title text-center">Other Ways to Support</h2>
                        <div class="support-options">
                            <div class="support-card">
                                <h3>Volunteer</h3>
                                <p>Share your expertise as a mentor or help with events</p>
                                <a href="/contact" class="btn btn-outline">Get Involved</a>
                            </div>
                            <div class="support-card">
                                <h3>Spread the Word</h3>
                                <p>Follow us on social media and share our mission</p>
                                <a href="/media" class="btn btn-outline">Follow Us</a>
                            </div>
                            <div class="support-card">
                                <h3>Equipment Donation</h3>
                                <p>Donate tools, computers, or robotics equipment</p>
                                <a href="/contact" class="btn btn-outline">Contact Us</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .impact-list {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .impact-item h3 {
        color: var(--light-red);
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    .stats-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        padding: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 2rem;
    }

    .stat-item {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: bold;
        color: var(--light-red);
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1rem;
    }

    .testimonial-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        padding: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        font-style: italic;
    }

    .testimonial-card blockquote {
        margin-bottom: 1rem;
        font-size: 1.1rem;
    }

    .testimonial-card cite {
        color: var(--light-red);
        font-style: normal;
        font-size: 0.9rem;
    }

    .donation-section {
        max-width: 800px;
        margin: 0 auto;
    }

    .amount-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin: 2rem 0;
    }

    .amount-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        padding: 1.5rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        text-align: center;
    }

    .amount-card h4 {
        color: var(--light-red);
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .donation-methods {
        margin-top: 3rem;
    }

    .method-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .method-item {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        padding: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        text-align: center;
    }

    .method-item h4 {
        color: var(--light-red);
        margin-bottom: 1rem;
        font-size: 1.2rem;
    }

    .method-item p {
        margin-bottom: 1.5rem;
    }

    .support-options {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .support-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        padding: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        text-align: center;
    }

    .support-card h3 {
        color: var(--light-red);
        margin-bottom: 1rem;
        font-size: 1.3rem;
    }

    .support-card p {
        margin-bottom: 1.5rem;
    }

    .btn-outline {
        background: transparent;
        border: 1px solid var(--light-red);
        color: var(--light-red);
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }

    .btn-outline:hover {
        background: var(--light-red);
        color: white;
    }

    .hero-actions {
        margin-top: 2rem;
    }

    .btn-lg {
        padding: 1rem 2rem;
        font-size: 1.2rem;
    }
</style>