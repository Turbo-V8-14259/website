---
import Layout from "../layouts/Layout.astro";
import Heading from "../components/Heading.astro";
import bgImage from "../images/robot-bg.jpg";
import first from "../images/first.jpg";
import team from "../images/team.jpg";
import bot from "../images/bot.webp";
import { Image } from "astro:assets";
---

<Layout title="">
    <main class="main-content index-main">
        <Heading
                titleText="BUILDING THE FUTURE"
                subtitleText="Innovating through robotics and technology"
                buttonText="View Our Projects"
                buttonURL="#projects"
                bgImageData={bgImage}
        />

        <!-- About Sections -->
        <section class="about-sections py-6">
            <div class="container">
                <div class="about-grid">

                    <!-- Who We Are -->
                    <div class="about-card">
                        <div class="card-image">
                            <Image
                                    src={team}
                                    alt="TurbΩ V8 Team"
                                    widths={[400, 800]}
                                    sizes="(max-width: 768px) 100vw, 33vw"
                                    height={200}
                                    format="avif"
                                    loading="eager"
                            />
                        </div>
                        <h3>Who we are</h3>
                        <p>
                            We are TurbΩ V8, a robotics team based in Pleasanton, California,
                            participating in the FIRST Tech Challenge (FTC) since 2017.
                            Our team is passionate about robotics and engineering, and
                            we take pride in designing innovative robots. Beyond competitions,
                            we're committed to inspiring the next generation of STEM
                            enthusiasts through outreach and mentorship in our community.
                        </p>
                    </div>

                    <!-- Our Goal -->
                    <div class="about-card">
                        <div class="card-image">
                            <Image
                                    src={bgImage}
                                    alt="Our Goal"
                                    widths={[400, 800]}
                                    sizes="(max-width: 768px) 100vw, 33vw"
                                    height={200}
                                    format="avif"
                                    loading="eager"
                            />
                        </div>
                        <h3>Our Goal</h3>
                        <p>
                            We are a community-based team filled with youth STEM ambassadors.
                            We hope to inspire and recruit passionate individuals and provide
                            a powerful learning experience through robotics. By learning from
                            each other and seeking daily growth, we transcend traditional
                            disciplinary boundaries in our drive toward the FIRST World Championship.
                        </p>
                    </div>

                    <!-- What We Do -->
                    <div class="about-card">
                        <div class="card-image">
                            <Image
                                    src={bot}
                                    alt="What we do"
                                    widths={[400, 800]}
                                    sizes="(max-width: 768px) 100vw, 33vw"
                                    height={200}
                                    format="avif"
                                    loading="eager"
                            />
                        </div>
                        <h3>What we do</h3>
                        <p>
                            We frequently interact with community members both locally and
                            internationally, collaborating and mentoring others in STEM and
                            robotics. TurbΩ V8 holds regular team meetings to communicate
                            and build our robots for every season.
                        </p>
                    </div>

                    <!-- FIRST & FTC -->
                    <div class="about-card">
                        <div class="card-image">
                            <Image
                                    src={first}
                                    alt="FIRST and FTC"
                                    widths={[400, 800]}
                                    sizes="(max-width: 768px) 100vw, 33vw"
                                    height={200}
                                    format="avif"
                                    loading="eager"
                            />
                        </div>
                        <h3>What is FIRST and FTC?</h3>
                        <p>
                            FIRST is a nonprofit organization that supports youth in their
                            journey through STEM. FIRST provides both opportunity and community
                            for an engaging robotics experience. Students from 7th–12th grade
                            may participate, and adults can serve as mentors or coaches.
                        </p>
                        <a
                                href="https://www.firstinspires.org/robotics/ftc"
                                class="learn-more-link"
                                target="_blank"
                                rel="noopener noreferrer"
                        >
                            Learn more
                        </a>
                    </div>

                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .index-main {
        padding-top: 0 !important;
    }

    .about-sections {
        padding: 6rem 0;
    }

    .about-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .about-card {
        background: linear-gradient(145deg, #1a1a1a, #0f0f0f);
        border: 2px solid #333;
        border-radius: 15px;
        padding: 2rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    .about-card:hover {
        transform: translateY(-5px);
        border-color: var(--light-red);
        box-shadow: 0 8px 25px rgba(255, 26, 26, 0.15);
    }

    .card-image {
        margin: -2rem -2rem 1.5rem -2rem;
        overflow: hidden;
        border-radius: 15px 15px 0 0;
    }

    .card-image img {
        width: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .about-card:hover .card-image img {
        transform: scale(1.05);
    }

    .about-card h3 {
        color: var(--light-red);
        font-size: 1.4rem;
        margin-bottom: 1rem;
        font-weight: bold;
    }

    .about-card p {
        color: #ffffff90;
        line-height: 1.7;
    }

    .learn-more-link {
        color: var(--light-red);
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s ease;
    }

    .learn-more-link:hover {
        color: white;
        text-shadow: 0 0 10px var(--light-red);
    }

    @media (max-width: 768px) {
        .about-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
