<style>
    /* Custom styles specific to team page */
    .team-member {
        text-align: center;
        width: 100%;
        max-width: 280px;
    }

    .member-photo {
        width: 120px;
        height: 120px;
        margin: 0 auto 1.5rem;
    }

    .member-name {
        font-size: 1.3rem;
        color: white;
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    .member-role {
        font-size: 1rem;
        font-weight: 600;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .member-photo {
            width: 100px;
            height: 100px;
        }
    }
</style>