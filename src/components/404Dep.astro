<section class="title">
    <div class="title-content">
        <h1>404: The page requested was not found</h1>
        <a href="/" class="cta-button">Go Home</a>
    </div>
</section>

<style>
    .title {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(10, 10, 10, 0.7);
        position: relative;
        overflow: hidden;
    }

    .title::after {
        content: '';
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 100px;
        background: linear-gradient(transparent, var(--black));
    }

    .title-content {
        text-align: center;
        z-index: 1;
    }

    h1 {
        font-size: 4rem;
        margin-bottom: 1rem;
        color: white;
        text-shadow: 0 0 15px var(--red-shadow);
    }

    p {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        color: #ffffff90;
    }

    .cta-button {
        display: inline-block;
        padding: 1rem 2rem;
        background: var(--light-red);
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .cta-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 0 20px var(--dark-red);
    }
</style>