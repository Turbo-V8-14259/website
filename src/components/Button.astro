---
interface Props {
    href?: string;
    type?: "submit" | "reset" | "button";
    class?: string;
}

const {
    href,
    type = "button",
    class: className = "",
}: Props = Astro.props;
---

{href ? (
<a href={href} class={`custom-btn ${className}`}>
    <slot />
</a>
    ) : (
<button type={type} class={`custom-btn ${className}`}>
    <slot />
</button>
    )}

<style>
    .custom-btn {
        display: inline-block;
        padding: 0.75rem 2rem;
        background: linear-gradient(
                90deg,
                var(--dark-red),
                var(--light-red),
                var(--dark-red)
        ) left;
        background-size: 200%;
        color: #fff;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.15);
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 700;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        cursor: pointer;
        transition: background-position 0.4s ease,
        transform 0.2s,
        box-shadow 0.2s;

        text-decoration: none; /* remove underline */
    }

    /* Animation */
    .custom-btn:hover,
    .custom-btn:focus {
        background-position: right;
        transform: translateY(-2px) scale(1.03);
        box-shadow: 0 4px 16px rgba(255, 126, 95, 0.15);
        outline: none;
    }

    /* Only control visited state separately */
    .custom-btn:visited {
        text-decoration: none;
        color: #fff;
    }

</style>
