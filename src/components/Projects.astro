---
import {getImage} from "astro:assets";
import battleBotImg from "../images/battle-bot.jpg";
import drone from "../images/drone.jpg";
import robotArm from "../images/robot-arm.jpg";

const projects = [{
    title: "Battle Bot",
    description: "Our award-winning combat robot design",
    image: (await getImage({src: battleBotImg, format: "avif"})).src
}, {
    title: "Autonomous Drone",
    description: "AI-powered aerial robotics platform",
    image: (await getImage({src: drone, format: "avif"})).src
}, {
    title: "Robot Arm",
    description: "Precision robotic manipulation system",
    image: (await getImage({src: robotArm, format: "avif"})).src
}];
---
<section id="projects" class="section-large">
    <h2 class="section-title">Our Projects</h2>
    <div class="grid-auto-fit-large">
        {projects.map(project => (
                <div class="card-simple">
                    <div class="project-image" style={{backgroundImage: `url(${project.image})`}}></div>
                    <div class="project-info p-3">
                        <h3 class="text-red mb-2">{project.title}</h3>
                        <p class="text-muted">{project.description}</p>
                    </div>
                </div>))}
    </div>
</section>

<style>
    .project-image {
        height: 200px;
        background-size: cover;
        background-position: center;
        object-fit: fill;
    }

    .project-info p {
        font-size: 0.9rem;
    }
</style>